{
  "name": "client",
  "version": "0.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . MyApp --platform=win32 --arch=x64 --out=dist --overwrite",
    "package-win": "electron-packager . MyApp --platform=win32 --arch=x64 --out=dist --overwrite",
    "package-mac": "electron-packager . MyApp --platform=darwin --arch=x64 --out=dist --overwrite",
    "package-linux": "electron-packager . MyApp --platform=linux --arch=x64 --out=dist --overwrite",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.example.myapp",
    "productName": "MyApp",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "packageManager": "yarn@4.5.0",
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.1.7",
    "electron-packager": "^17.1.2"
  }
}
