{
	"compilerOptions": {
	  "target": "esnext",
	  "module": "esnext",
	  "moduleResolution": "node",
	  "strict": true,
	  "jsx": "preserve",
	  "importHelpers": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "allowSyntheticDefaultImports": true,
	  "sourceMap": true,
	  "baseUrl": ".",
	  "paths": {
		"@/*": ["src/*"]
	  },
	  "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
	"exclude": ["node_modules"]
  }